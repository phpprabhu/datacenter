<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_list"
                android:orientation="vertical">

    <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:id="@+id/layout_date"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="6dp"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"/>
        <TextView
                android:textColor="@color/white"
                android:textSize="6dp"
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAY"/>
    </LinearLayout>
    <TextView
            android:textColor="@color/white"
            android:textSize="6dp"
            android:layout_toRightOf="@+id/layout_date"
            android:text="movementext"
            android:id="@+id/movementext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold" />

    <TextView
            android:textColor="@color/white"
            android:textSize="6dp"
            android:layout_toRightOf="@+id/layout_date"
            android:layout_below="@+id/movementext"
            android:text="description1"
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:textColor="@color/white"
            android:textSize="6dp"
            android:layout_toRightOf="@+id/layout_date"
            android:layout_below="@+id/description1"
            android:text="description2"
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="6dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/description2"
            android:text="100.00 EUR"
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>